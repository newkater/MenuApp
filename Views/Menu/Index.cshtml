@model List<Dish>
@{
    ViewData["Title"] = "MenuIndex";
}

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-6">
                <div>
                    <h4>@item.Name</h4>
                </div>
                <div>
                    <img src="@item.ImageUrl" width=100/>
                </div>
                <div>
                    <h5>@item.Price</h5>
                </div>
            </div>
        }
    </div>
</div>